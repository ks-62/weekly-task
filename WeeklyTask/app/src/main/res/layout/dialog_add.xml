<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <CheckBox
            android:id="@+id/chFixFlg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/text_fix_flg"/>

        <Spinner
            android:id="@+id/spnrDataType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/weekList"
            android:layout_marginVertical="10dp"/>

        <TextView
            android:id="@+id/textView_err"
            style="@style/err_text_in_dialog"
            android:text=""/>

        <EditText
            android:id="@+id/editText_task"
            style="@style/edit_text_in_dialog"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

</LinearLayout>