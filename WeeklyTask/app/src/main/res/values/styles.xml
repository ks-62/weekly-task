<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- page_title スタイル-->
    <style name="text_page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- テキストスタイル -->
    <style name="text_norml">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- テキストスタイルsmall -->
    <style name="text_small">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- ListView内のテキストスタイル -->
    <style name="text_inner_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- ダイアログ内のエラーテキスト -->
    <style name="err_text_in_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#fc4747</item>
    </style>

    <!-- ダイアログ内のエディットテキスト -->
    <style name="edit_text_in_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:hint">課題を入力してください。</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- ダイアログ内のテキスト(週) -->
    <style name="text_in_dialog_week">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- ダイアログ内のテキスト(課題) -->
    <style name="text_in_dialog_task">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- 画面遷移ボタン -->
    <style name="button_activity">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_rounded_corner</item>
    </style>

    <!-- 通常のボタン -->
    <style name="button_normal">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#00dbde</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/button_frame</item>
    </style>

    <!-- 完了ボタンスタイル -->
    <style name="button_done_style">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#696969</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/button_done</item>
        <item name="android:background">@drawable/button_frame</item>
    </style>

</resources>
